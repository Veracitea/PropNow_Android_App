<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".ViewAgentInfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"/>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="104dp"
                android:layout_marginTop="464dp"
                android:text="Chandler Bing"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="61dp"
                android:layout_height="57dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="444dp"
                android:contentDescription="@string/todo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_action_name"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="47dp"
                android:layout_height="49dp"
                android:layout_marginStart="316dp"
                android:layout_marginTop="452dp"
                android:contentDescription="TODO"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <Button
                android:id="@+id/chandler_bing_button"
                android:layout_width="349dp"
                android:layout_height="63dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="436dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="33dp"
                android:layout_height="36dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="464dp"
                android:text="@string/_5_0"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/companyABC"
                android:layout_width="357dp"
                android:layout_height="190dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="172dp"
                android:background="@drawable/box"
                android:gravity="center_horizontal"
                android:text="@string/company_abc"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/monica_geller_button"
                android:layout_width="349dp"
                android:layout_height="63dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="212dp"
                android:background="@android:color/transparent"
                android:onClick="ClickAgent"
                android:textColor="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="232dp"
                android:text="@string/monica_geller"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="33dp"
                android:layout_height="36dp"
                android:layout_marginStart="272dp"
                android:layout_marginLeft="272dp"
                android:layout_marginTop="296dp"
                android:text="@string/_4_9"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/ross_geller_button"
                android:layout_width="349dp"
                android:layout_height="63dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="276dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="33dp"
                android:layout_height="36dp"
                android:layout_marginStart="272dp"
                android:layout_marginLeft="272dp"
                android:layout_marginTop="232dp"
                android:text="@string/_5_0"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="47dp"
                android:layout_height="49dp"
                android:layout_marginStart="308dp"
                android:layout_marginTop="284dp"
                android:contentDescription="star"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="296dp"
                android:text="@string/ross_geller"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="61dp"
                android:layout_height="57dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="212dp"
                android:contentDescription="TODO"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_action_name" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="47dp"
                android:layout_height="49dp"
                android:layout_marginStart="308dp"
                android:layout_marginTop="220dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="61dp"
                android:layout_height="57dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="276dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_action_name" />

            <Button
                android:id="@+id/btSearch"
                android:layout_width="346dp"
                android:layout_height="44dp"
                android:backgroundTint="#FFFFFF"
                android:text="SEARCH"
                android:textAlignment="viewStart"
                android:textColor="#0C0C0C"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.415"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.088" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/companyXYZ"
            android:layout_width="357dp"
            android:layout_height="190dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/box"
            android:gravity="center_horizontal"
            android:text="Company XYZ"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity = "start"
        android:background="@color/white">

        <include
            layout="@layout/main_nav_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>